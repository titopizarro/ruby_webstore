<div class="mt-2 p-4">

  <%= form_with(model: store) do |form| %>

    <div class="form-group row mt-4">
      <label for="name" class="col-sm-2 col-form-label"><%= form.label :name %></label>
      <div class="col-sm-10">
        <%= form.text_field :name, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row mt-4">
      <label for="name" class="col-sm-2 col-form-label"><%= form.label :street %></label>
      <div class="col-sm-10">
        <%= form.text_field :street, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row mt-4">
      <label for="name" class="col-sm-2 col-form-label"><%= form.label :number %></label>
      <div class="col-sm-10">
        <%= form.text_field :number, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row mt-4">
      <label for="name" class="col-sm-2 col-form-label"><%= form.label :zip_code %></label>
      <div class="col-sm-10">
        <%= form.text_field :zip_code, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row mt-4">
      <label for="name" class="col-sm-2 col-form-label"><%= form.label :city %></label>
      <div class="col-sm-10">
        <%= form.text_field :city, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row mt-4">
      <label for="name" class="col-sm-2 col-form-label"><%= form.label :country %></label>
      <div class="col-sm-10">
        <%= form.text_field :country, class: "form-control" %>
      </div>
    </div>

    <% if store.errors.any? %>
      <div id="error_explanation" class="text-danger">
        <small><%= pluralize(store.errors.count, "error") %> prohibited this store from being saved:</small>

        <ul>
          <% store.errors.each do |error| %>
            <li class="text-danger"><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group row">
      <div class="col">
        <div class="mt-4 d-flex justify-content-between align-items-center">
          <%= link_to 'Cancel', stores_path, class: "btn btn-secondary" %>
          <%= form.submit 'Save Category', class: "btn btn-primary" %>
        </div>
      </div>
    </div>

  <% end %>

</div>
