<div class="modal-header">

  <h5 class="modal-title" id="storeModalLabel">
    <% if @edit %>
    <span class="text-primary"> Edit store</span>
    <% elsif @erased != true %>
    <span class="text-primary"> New store</span>
    <% else %>
    <span class="text-danger"> Remove store</span>
    <% end %>
  </h5>

  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>

</div>

<div class="modal-body" id="storeModalBody">
  <% if @erased != true %>

   <%= render 'form', store: @store, :remote => true %>

  <% else %>

    <p> Are you sure you remove the store <strong class="text-danger"><%= @store.name %></strong>? </p>
    <p> The data is permanently deleted. This action can not be undone.</p>

  <% end %>
</div>

<% if @erased %>
<div class="modal-footer">
  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
  <%= link_to 'Delete', delete_store_path(@store), method: :delete, :class => "btn btn-danger" %>
</div>
<% end %>