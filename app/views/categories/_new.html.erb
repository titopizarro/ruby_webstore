<div class="modal-header">

  <h5 class="modal-title" id="categoryModalLabel">
    <% if @edit %>
    <span class="text-primary"> Edit category</span>
    <% elsif @erased != true %>
    <span class="text-primary"> New category</span>
    <% else %>
    <span class="text-danger"> Remove category</span>
    <% end %>
  </h5>

  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>

</div>

<div class="modal-body" id="categoryModalBody">
  <% if @erased != true %>

	 <%= render 'form', category: @category, :remote => true %>

  <% else %>

    <p> Are you sure you remove the category <strong class="text-danger"><%= @category.name %></strong>? </p>
    <p> The data is permanently deleted. This action can not be undone.</p>

  <% end %>
</div>

<% if @erased %>
<div class="modal-footer">
  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
  <%= link_to 'Delete', delete_category_path(@category), method: :delete, :class => "btn btn-danger" %>
</div>
<% end %>