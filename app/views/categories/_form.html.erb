<div class="mt-2 p-4">

  <%= form_with(model: category) do |form| %>

    <div class="form-group row mt-4">
      <label for="name" class="col-sm-2 col-form-label"><%= form.label :name %></label>
      <div class="col-sm-10">
        <%= form.text_field :name, class: "form-control" %>
      </div>
    </div>

    <% if category.errors.any? %>
      <div id="error_explanation" class="text-danger">
        <small><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</small>

        <ul>
          <% category.errors.each do |error| %>
            <li class="text-danger"><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group row">
      <div class="col">
        <div class="mt-4 d-flex justify-content-between align-items-center">
          <%= link_to 'Cancel', categories_path, class: "btn btn-secondary" %>
          <%= form.submit 'Save Category', class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>

</div>
