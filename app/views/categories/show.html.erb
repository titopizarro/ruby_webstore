<div class="row justify-content-center">
  <div class="col-md-6 col-sm-12 align-self-center">
    <div class="d-flex justify-content-between align-items-center py-2 mb-4 border-bottom">
        <%= link_to 'Back', categories_path %>
        <!-- <%= link_to 'Edit', edit_category_path(@category) %> -->
    </div>
    
    <% if !notice.to_s.empty? %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= notice %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% end %>

    <div class="d-flex justify-content-between align-items-center">
        <h1>Show Category</h1>
    </div>

    <div class="mt-2 p-4" style="background-color: #dedede40;">
      <small>Name:</small>
      <h4>
        <strong><%= @category.name %></strong>
      </h4>
      <small>Keywords:</small>
      <h5>
        <% @category.keywords.each do |k| %>
          <div id="keyword-<%= k.name %>" class="d-inline-flex align-items-center">
            <span class="text-center"><%= k.name %></span>
          </div>
        <% end %>
      </h5>
      <div class="mt-3">
        <small>Created at <%= time_tag @category.created_at %></small>
      </div>
    </div>
    
  </div>
</div>
